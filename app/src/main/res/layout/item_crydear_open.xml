<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="10dp">

        <LinearLayout
            android:id="@+id/item_Crydear_open_tion_hander"
            android:layout_width="2dp"
            android:layout_height="13dp"
            android:background="?attr/colorPrimary"
            android:orientation="vertical"></LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_Crydear_open_tion_center"
            android:layout_width="14dp"
            android:layout_height="14dp"
            app:cardBackgroundColor="?attr/colorPrimary"
            app:cardCornerRadius="7dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp" />

        <LinearLayout
            android:id="@+id/item_Crydear_open_tion_bottom"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/item_Crydear_open_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:autoLink="all"
            android:text="TextView"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_Crydear_open_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="TextView" />
    </LinearLayout>

</LinearLayout>