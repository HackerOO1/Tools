<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundIndicatorView">
        <!--最大数值-->
        <attr name="maxNum" format="integer" />
        <!--圆盘起始角度-->
        <attr name="startAngle" format="integer" />
        <!--圆盘扫过的角度-->
        <attr name="sweepAngle" format="integer" />
    </declare-styleable>

    <declare-styleable name="countdown">
        <attr name="color_bg" format="color" />
        <attr name="color_text" format="color" />
        <attr name="text_size" format="integer" />
        <attr name="setDrawable" format="reference" />
        <attr name="setDrawable_sub" format="reference" />
    </declare-styleable>

    <declare-styleable name="TimeViewComm">
        <attr name="tvc_backgroundColor" format="color" />
        <attr name="tvc_textColor" format="color" />
        <attr name="tvc_spaceColor" format="color" />
        <attr name="tvc_textSize" format="dimension" />
        <attr name="tvc_radius" format="dimension" />
        <attr name="tvc_textPaddingHorizantal" format="dimension" />
        <attr name="tvc_textPaddingVertical" format="dimension" />
    </declare-styleable>
    <declare-styleable name="TimeViewScroll">
        <attr name="tvs_backgroundColor" format="color" />
        <attr name="tvs_textColor" format="color" />
        <attr name="tvs_textSize" format="dimension" />
        <attr name="tvs_textPaddingHorizantal" format="dimension" />
    </declare-styleable>

</resources>